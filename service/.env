# API Configuration
PORT=3000
NODE_ENV=development  # Set to 'production' in production

# API Security
API_KEY=your_secure_api_key_here
ADMIN_API_KEY=your_secure_admin_api_key_here  # Optional, for admin-only routes
CORS_ORIGIN=http://localhost:8080  # Set to your frontend URL or * for any origin

# MongoDB Connection (same as Discord bot)
MONGODB_URI=mongodb://username:password@localhost:27017/discord_bot
DB_NAME=discord_bot
MEMBERS_COLLECTION=members

# Logging
LOG_LEVEL=info  # debug, info, warn, error