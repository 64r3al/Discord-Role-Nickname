# Discord Bot Token - Get from Discord Developer Portal
DISCORD_TOKEN=YOUR-DSCIORD-BOT-TOKEN

# MongoDB Connection URI
MONGODB_URI=mongodb://username:password@localhost:27017/discord_bot

# Database Settings
DB_NAME=discord_bot
MEMBERS_COLLECTION=members

# Discord Guild/Server Settings
# Leave LOG_CHANNEL_ID blank to disable Discord channel logging
LOG_CHANNEL_ID=1374629569008635934

# Optional: Specific admin role ID
# If not set, anyone with Administrator permission can use admin commands
ADMIN_ROLE_ID=1307071253663842346

# Feature Flags
# Set AUTO_RESTORE to "false" to disable automatic role/nickname restore on rejoin
AUTO_RESTORE=true

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Optional: Custom command prefix (default is !)
COMMAND_PREFIX=!